<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baabtra.mizna.assignment_4.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="How you feeling today?" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:onClick="onButtonhappyclicked"
        android:text="Happy?" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frameLayout"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:onClick="onButtonsadclicked"
        android:text="Sad?" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:onClick="onButtonlovedclicked"
        android:text="Loved?" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:onClick="onButtonterribleclicked"
        android:text="terrible?" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">


        <RelativeLayout
            android:id="@+id/viewterrible"
            android:layout_width="match_parent"
            android:layout_height="452dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/fun2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewloved"
            android:layout_width="match_parent"
            android:layout_height="452dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/fun5" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/viewhappy"
            android:layout_width="match_parent"
            android:layout_height="452dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/image7" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/viewsad"
            android:layout_width="match_parent"
            android:layout_height="452dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/fun1" />
        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
